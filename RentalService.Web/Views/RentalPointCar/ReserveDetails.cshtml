@model DetailedReservationVM

@{
    ViewData["Title"] = "Reserve details";
}

<h1>Enter reserve details</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="ReserveDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="KeyReceiptTime" class="control-label">Key receipt time (opening hours 09:00 to 20:00)</label>
                <input asp-for="KeyReceiptTime" class="form-control" type="time" min="09:00" max="20:00" />
                <span asp-validation-for="KeyReceiptTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
