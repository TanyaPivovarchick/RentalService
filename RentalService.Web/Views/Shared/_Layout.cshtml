<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row min-vh-100">
            <nav class="col-2 collapse d-md-flex bg-dark text-light pt-2" id="sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link navbar-brand">Service Rental</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Administration</a>
                        <ul class="nav flex-column ml-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Brand" asp-action="Index">Brands</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="City" asp-action="Index">Cities</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Country" asp-action="Index">Countries</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>

            <div class="col pt-2">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>