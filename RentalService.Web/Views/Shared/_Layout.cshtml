<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row min-vh-100">
            <nav class="col-2 collapse d-md-flex bg-dark text-light pt-2" id="sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link navbar-brand">Service Rental</a>
                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link">Administration</a>
                            <ul class="nav flex-column ml-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Brand" asp-action="Index">Brands</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Car" asp-action="Index">Cars</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="City" asp-action="Index">Cities</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Country" asp-action="Index">Countries</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalCompany" asp-action="Index">Rental companies</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalPoint" asp-action="Index">Rental points</a>
                                </li>
                            </ul>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link">Rent</a>
                            <ul class="nav flex-column ml-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalPointCar" asp-action="Index">Cars</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <br />
                            <a href="#" class="nav-link" data-toggle="modal" data-target=".logout-modal">Logout</a>
                        </li>
                    }
                </ul>
            </nav>

            <div class="col pt-2">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="modal logout-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header"><h4>Logout<i class="fa fa-lock"></i></h4></div>
                <div class="modal-body"><i class="fa fa-question-circle"></i> Are you sure you want to log-off?</div>
                <div class="modal-footer"><a asp-controller="Account" asp-action="Logout" class="btn btn-success btn-block">Logout</a></div>
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>